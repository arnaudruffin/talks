// main: theme.styl

#slide-speaker
    font-weight: 300

    h1
        position: static

    p
        margin: 0

    .org
        position:  absolute
        bottom:    1em
        left:      50%
        transform: translateX(-50%)


    img
        width:         10em
        border-radius: 50%

    .org img
        width:         1.6em
        box-shadow:    none
        border:        none
        border-radius: 0


    a
        text-decoration: none

    strong
        font-weight: 700

    .extras
        font-size: 18px


    h1
        margin-top:  .25em
        font-family: Sinzano
        font-size:   60px
        font-weight: 400


    &.speakers
        display: flex

    .speaker
        flex 1 0 50%


.sp-m4dz
.sp-luc
    position: relative

    &::after
        content:         ''
        display:         block
        position:        absolute
        bottom:          1em
        left:            1em
        width:           48px
        height:          48px
        border-radius:   50%
        background-size: cover
        border:          2px solid lightgrey

.sp-m4dz::after
    background-image: url(../img/m4dz.jpg)

.sp-luc::after
    background-image: url(https://pbs.twimg.com/profile_images/725975577954541568/p8tvpOik.jpg)
