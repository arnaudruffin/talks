// main: index.styl

#slide-speaker
    font-weight: 300

    h1
        position: static

    p
        margin: 0

    .org
        position:  absolute
        bottom:    1em
        left:      50%
        transform: translateX(-50%)


    & > p > img
        width:         10em
        border-radius: 50%

    .org img
        width:      1.6em
        box-shadow: none
        border:     none


    a
        text-decoration: none

    strong
        font-weight: 700

    .extras
        font-size: 18px


    h1
        margin-top:  .25em
        font-family: Sinzano
        font-size:   60px
        font-weight: 400
